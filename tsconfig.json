{
  "compilerOptions": {
    "module": "CommonJS",                
    "moduleResolution": "Node",           
    "target": "ESNext",                   
    "esModuleInterop": true,              
    "strict": true,                       
    "sourceMap": true,                    
    "rootDir": "./src",                   
    "outDir": "./dist",                   
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true                  
  },
  "include": ["src/**/*"],                
  "exclude": ["node_modules"]             
}
